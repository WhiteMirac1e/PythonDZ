while i < len(list):
    if (list[i] - int(list[i])) > max:
      max = (list[i] - int(list[i]))
      i += 1
    elif (list[i] - int(list[i])) < min:
      min = (list[i] - int(list[i]))
      i += 1
    else:
      i += 1
print(f'Максимальный остаток: {max}')
