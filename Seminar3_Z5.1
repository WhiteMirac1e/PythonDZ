# Пример:
# - для k = 8 список будет выглядеть так:
# [-21 ,13, -8, 5, −3, 2, −1, 1, 0, 1, 1, 2, 3, 5, 8, 13, 21]
n = int(input('Введите число: '))
i = 1
f = [0, 1]
f2 = []
f3 = []
# Fn = F(n-1) + F(n-2)
while i <= n:
  f[i] = f[i-1] + f[i-2]
  print(f)
  f.append(f[i])
  i += 1  
print(f'Результат f: {f}')

# F−n = (−1)n+1Fn. Fn = F(n+2)−F(n+1)
f3 = f
f2 = f
f2.reverse()

i = 1
while i <= n:
  f2[i] *= (-1) 
  print(f2)
  i += 2  


